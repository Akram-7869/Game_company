                    <script>

                        function delRec(id) {
                            let r = confirm('Want to delet?');

                            if (r) {
                                handleDel(i);
                            }


                        }
                        function handleDel(id) {
                            return $.ajax({
                                type: 'DELETE',
                                url: '<%=process.env.ADMIN_URL%>/admin/settings/' + id,
                                success: (results) => {
                                    alert('Record Delete');
                                    location.reload();
                                },
                                error: (err) => {
                                    alert('Error While Deleting');
                                }
                            });
                        }
                        function view(id) {
                            alert(id);
                        }

                        var table = $('#listsetting').DataTable({

                            lengthChange: false,
                            buttons: ['excel', 'pdf'],
                            "pageLength": 0,
                            "language": {
                                "search": "Player:",
                                searchPlaceholder: "Player Id / phone"
                            },
                            initComplete: function () {
                                var input = $('.dataTables_filter input').unbind(),
                                    self = this.api(),
                                    $searchButton = $('<button>')
                                        .text('search')
                                        .click(function () {
                                            //self.column(1).search('ccccccccccccccc');
                                            self.search(input.val()).draw();
                                        }),
                                    $clearButton = $('<button>')
                                        .text('clear')
                                        .click(function () {
                                            input.val('');
                                            $searchButton.click();
                                        })
                                $('.dataTables_filter').append($searchButton, $clearButton);
                                table.buttons().container()
                                    .appendTo('#listsetting_wrapper .col-md-6:eq(0)');
                            },

                            "processing": true,
                            "serverSide": true,
                            "ajax": {
                                url: '<%=process.env.ADMIN_URL%>/admin/player/data', type: "post",
                                data: function (d) {
                                    d['s_date'] = $('#s_date').val();
                                    d['e_date'] = $('#e_date').val();
                                    // d['id'] =status-filter;
                                    d['status'] = $('#status-filter').val();
                                    d[$('#id-field').val()] = $('#id-value').val();
                                    return d;
                                }
                            },
                            "columns": [
                                { data: null, "render": function (data, type, full, meta) { return meta.row + 1; } },
                                { data: '_id' },
                                { data: 'firstName', "defaultContent": "" },
                                { data: 'email', "defaultContent": "" },
                                { data: 'phone', "defaultContent": "" },
                                {
                                    data: 'createdAt', render: function (data) {
                                        return moment(data).format('DD-MM-YYYY');
                                    }
                                },
                                { data: 'status', "defaultContent": "" },

