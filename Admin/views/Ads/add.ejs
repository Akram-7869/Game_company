<%- contentFor('body') %>

 
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <!--  
                    <div class="mb-3">
                        <label class="form-label">Bot Complexity</label>
                        <input type="text" name="complexity" value="<%=row.complexity?row.complexity:'' %>" class="form-control" required placeholder="Bot Controle"/>
                    </div>-->   
                <form action="" enctype="multipart/form-data" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Url</label>
                        <input type="text" name="url" value="<%=row.url?row.url:'' %>" class="form-control" required placeholder="Url"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <div class="col-md-10">
                            <select id="location" class="form-select" name="location" required>
                                 <option value="HOME" <%=row.location === 'HOME'?'selected':'' %>>Home</option>
                                <option value="GAME"  <%=row.location === 'GAME'?'selected':'' %>>Game</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <div class="col-md-10">
                            <select id="statustxt" class="form-select" name="location" required>
                                 <option value="active" <%=row.status === 'active'?'selected':'' %>>active</option>
                                <option value="inactive"  <%=row.status === 'inactive'?'selected':'' %>>inactive</option>
                            </select>
                        </div>
                    </div>

                    <div class="dropzone" id="myDropzone"></div>
                    <div>
                        <button  id="submit-all" type="submit" class="btn btn-primary waves-effect waves-light me-1">
                            Submit
                        </button>
                         
                    </div>
                 
                    </form>
              
            </div>
        </div>
    </div> <!-- end col -->

   
</div> <!-- end row -->

<%- contentFor('FooterJs') %>
<script src="/public/assets/libs/dropzone/min/dropzone.min.js"></script>

<!-- parsleyjs -->
<script src="/public/assets/libs/parsleyjs/parsley.min.js"></script>

<script src="/public/assets/js/pages/form-validation.init.js"></script>
<!-- Sweet Alerts js -->
<script src="/public/assets/libs/sweetalert2/sweetalert2.min.js"></script>
<!-- Sweet alert init js
<script src="public/assets/js/pages/sweet-alerts.init.js"></script>-->
<script>
    let url = '<%= apiUrl + "add" %>'
    Dropzone.options.myDropzone= {
    url: url,
    autoProcessQueue: false,
    uploadMultiple: false,
    parallelUploads: 1,
    maxFiles: 50,
    maxFilesize: 5,
    acceptedFiles: 'image/*',
    addRemoveLinks: true,
    success: function(file, response){
        location.reload();

    },
    init: function() {
        dzClosure = this; // Makes sure that 'this' is understood inside the functions below.

        // for Dropzone to process the queue (instead of default form behavior):
        document.getElementById("submit-all").addEventListener("click", function(e) {
            // Make sure that the form isn't actually being sent.
            e.preventDefault();
            e.stopPropagation();
            if (dzClosure.getQueuedFiles().length > 0) {    
                Swal.showLoading();                    
                dzClosure.processQueue();  
            } else {                       
              
               alert('Please Select File')
            }
             
        });

        //send all the form data along with the files:
        this.on("sending", function(data, xhr, formData) {
            formData.append("location", $("#location").val());
            formData.append("status", $("#statustxt").val());
        
        });
    }
}
 
</script>
