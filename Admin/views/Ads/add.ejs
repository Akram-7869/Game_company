<!-- Sweet Alerts js -->
<script src="/public/assets/libs/sweetalert2/sweetalert2.min.js"></script>
<!-- Sweet alert init js
<script src="public/assets/js/pages/sweet-alerts.init.js"></script>-->
<script>
     function upload()  {
      const formData = new FormData();
      const file = this.croppedImage;

      formData.append('file', file);
      if (this.type) {
          formData.append('group_id', this.data);
      }

      let url = this.quizService.getQuizzes + this.data + '/photo'
      this.quizService.post(url, formData).subscribe(res => {
          this.image = this.quizService.getQuizzes + 'photo/' + res.data._id
          this.onResponse(res.data);

      },
      error => {
        
        console.log(error)
        alert(error.error.error);
      }
      
      )
  }
function handleSubmit(params) {
    if(params.checkValidity()){
        //Swal.showLoading();
        Swal.fire({
  title: '',
  html: 'Please wait...',
  allowEscapeKey: false,
  allowOutsideClick: false,
  didOpen: () => {
    Swal.showLoading()
  }
});
    }
    
}
</script>
