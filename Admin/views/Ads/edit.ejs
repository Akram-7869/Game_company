<%- contentFor('HeaderCss') %>
    <link href="/public/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <link href="/public/assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />

    <%- contentFor('breadcrumb') %>

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">
                        <%- title %> Edit
                    </h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Home</a></li>
                            <li class="breadcrumb-item active"><a href="<%=process.env.ADMIN_URL%>/admin/banner">
                                    <%- title %> List
                                </a></li>
                            <li class="breadcrumb-item active">Add</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <%- contentFor('body') %>


            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">

                            <form id="banner" action="" enctype="multipart/form-data" method="POST">

                                <div class="mb-3">
                                    <label class="form-label">Url</label>
                                    <input type="text" id="url" name="url" value="<%=row.url?row.url:'' %>"
                                        class="form-control" required placeholder="Url " />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Location</label>
                                    <div class="col-md-10">
                                        <select id="location" class="form-select" name="location" required>
                                            <option value="HOME" <%=row.location==='HOME' ?'selected':'' %>>Home
                                            </option>
                                            <option value="HOME" <%=row.location==='HOME' ?'selected':'' %>>Home
                                            </option>
                                            <option value="PROFILE" <%=row.location==='PROFILE' ?'selected':'' %>
                                                >Profile
                                            </option>

                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Type</label>
                                    <div class="col-md-10">
                                        <select id="bannerType" class="form-select" name="bannerType" required>
                                            <option value="banner" <%=row.bannerType==='banner' ?'selected':'' %>>Banner
                                            </option>
                                            <option value="fullscreen" <%=row.bannerType==='fullscreen' ?'selected':''
                                                %>
                                                >FullScreen
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <div class="col-md-10">
                                        <select id="statustxt" class="form-select" name="status" required>
                                            <option value="active" <%=row.status==='active' ?'selected':'' %>>active
                                            </option>
                                            <option value="inactive" <%=row.status==='inactive' ?'selected':'' %>
                                                >inactive</option>
                                        </select>
                                    </div>
                                </div>

                                <img width=100 src="<%=process.env.IMAGE_URL + row.imageId%>">


                                <div class="dropzone" id="myDropzone"></div>
                                <div>
                                    <button id="submit-all" type="submit"
                                        class="btn btn-primary waves-effect waves-light me-1">
                                        Submit
                                    </button>

                                </div>

                            </form>


                        </div>
                    </div>
                </div> <!-- end col -->


            </div> <!-- end row -->

            <%- contentFor('FooterJs') %>
                <script src="/public/assets/libs/dropzone/min/dropzone.min.js"></script>

                <!-- parsleyjs -->
                <script src="/public/assets/libs/parsleyjs/parsley.min.js"></script>

                <script src="/public/assets/js/pages/form-validation.init.js"></script>
                <!-- Sweet Alerts js -->
                <script src="/public/assets/libs/sweetalert2/sweetalert2.min.js"></script>
                <!-- Sweet alert init js
<script src="public/assets/js/pages/sweet-alerts.init.js"></script>-->
                <script>
                    let url = '<%= apiUrl  +row._id %>'
                    Dropzone.options.myDropzone = {
                        url: url,
                        autoProcessQueue: false,
                        uploadMultiple: false,
                        parallelUploads: 1,
                        maxFiles: 50,
                        maxFilesize: 5,
                        acceptedFiles: 'image/*',
                        addRemoveLinks: true,
                        success: function (file, response) {
                            window.location = '<%= indexUrl  %>';

                        },
                        init: function () {
                            dzClosure = this; // Makes sure that 'this' is understood inside the functions below.

                            // for Dropzone to process the queue (instead of default form behavior):
                            document.getElementById("submit-all").addEventListener("click", function (e) {
                                // Make sure that the form isn't actually being sent.
                                e.preventDefault();
                                e.stopPropagation();
                                Swal.showLoading();
                                if (dzClosure.getQueuedFiles().length > 0) {
                                    dzClosure.processQueue();
                                } else {
                                    alert(JSON.stringify($("#banner").serialize()))

                                    $.post(url, $("#banner").serialize()).then(r => {
                                        location.reload();
                                    });
                                }

                            });

                            //send all the form data along with the files:
                            this.on("sending", function (data, xhr, formData) {
                                formData.append("url", $("#url").val());
                                formData.append("bannerType", $("#bannerType").val());
                                formData.append("location", $("#location").val());
                                formData.append("status", $("#statustxt").val());

                            });
                        }
                    }

