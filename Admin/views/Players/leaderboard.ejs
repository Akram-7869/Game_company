                        function handleDel(id) {
                            return $.ajax({
                                type: 'DELETE',
                                url: '<%=process.env.ADMIN_URL%>/admin/game/' + id,
                                success: (results) => {
                                    alert('Record Delete');
                                    location.reload();
                                },
