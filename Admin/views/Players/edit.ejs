<%- contentFor('HeaderCss') %>
    <link href="/public/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <%- contentFor('breadcrumb') %>

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">Player Edit</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Home</a></li>
                            <li class="breadcrumb-item active"><a href="<%=process.env.ADMIN_URL%>/admin/player">Player
                                    List</a></li>
                            <li class="breadcrumb-item active">Edit</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <%- contentFor('body') %>


            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <!--  <h4 class="card-title">Validation type</h4>
                <p class="card-title-desc"> </p> -->
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs nav-tabs-custom nav-justified" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-bs-toggle="tab" href="#home1" role="tab">
                                        <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                        <span class="d-none d-sm-block">Home</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="tab" href="#profile1" role="tab">
                                        <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                                        <span class="d-none d-sm-block">Profile</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="tab" href="#messages1" role="tab">
                                        <span class="d-block d-sm-none"><i class="far fa-envelope"></i></span>
                                        <span class="d-none d-sm-block">Change Status</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="tab" href="#settings1" role="tab">
                                        <span class="d-block d-sm-none"><i class="fas fa-cog"></i></span>
                                        <span class="d-none d-sm-block">Transactions</span>
                                    </a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content p-3 text-muted">
                                <div class="tab-pane active" id="home1" role="tabpanel">
                                    <p class="mb-0">
                                        <!-- <form class="custom-validation" action="" onsubmit="false" method="POST" name="player"  enctype="application/x-www-form-urlencoded"> -->
                                    <div class="mb-3">
                                        <label class="form-label">Phone</label>
                                        <input readonly type="text" name="" value="<%=row.phone?row.phone:'' %>"
                                            class="form-control" required placeholder="Phone" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Total Balance</label>
                                        <input readonly type="text" name="" value="<%=row.balance?row.balance:0 %>"
                                            class="form-control" required placeholder="" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Winings Balance</label>
                                        <input readonly type="text" name="" value="<%=row.winings?row.winings:0 %>"
                                            class="form-control" required placeholder="" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Deposit Balance</label>
                                        <input readonly type="text" name="" value="<%=row.deposit?row.deposit:0 %>"
                                            class="form-control" required placeholder="" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Bonus Balance</label>
                                        <input readonly type="text" name="" value="<%=row.bonus?row.bonus:0 %>"
                                            class="form-control" required placeholder="" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Kyc Status</label>
                                        <input readonly type="text" name="" value="<%=row.kycStatus?row.kycStatus:'' %>"
                                            class="form-control" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Member Ship</label>
                                        <input readonly type="text" name=""
                                            value="<%=row.membership?row.membership:'' %>" class="form-control"
                                            required />
                                        Expire : <%=row.membership_expire?row.membership_expire:'' %>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Status</label>
                                        <input readonly type="text" name="" value="<%=row.status?row.status:'' %>"
                                            class="form-control" required />
                                    </div>
                                    <table class="table">
                                        <thead>
                                            <tr>

                                                <th scope="col">level</th>

                                                <th scope="col">Refer Count</th>
                                                <th scope="col">Refer Total</th>


                                                <th scope="col">Refer Deposit Count:
                                                    <%=row.refer_deposit_count?row.refer_deposit_count:'' %>
                                                </th>
                                                <th scope="col">Refer Vip Count:
                                                    <%=row.refer_vip_count?row.refer_vip_count:'' %>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">
                                                    1
                                                </th>
                                                <td>
                                                    <%=row.refer_lvl1_count?row.refer_lvl1_count:'' %>
                                                </td>
                                                <td>
                                                    <%=row.refer_lvl1_total?row.refer_lvl1_total:'' %>
                                                </td>

                                            </tr>
                                            <tr>
                                                <th scope="row">2</th>
                                                <td>
                                                    <%=row.refer_lvl2_count?row.refer_lvl2_count:'' %>
                                                </td>
                                                <td>
                                                    <%=row.refer_lvl2_total?row.refer_lvl2_total:'' %>
                                                </td>


                                            </tr>
                                            <tr>
                                                <th scope="row"></th>
                                                <td>
                                                    total
                                                </td>
                                                <td>
                                                    <%=row.refrer_amount_total?row.refrer_amount_total:'' %>
                                                </td>


                                            </tr>

                                        </tbody>
                                    </table>
                                    <!-- </form> -->
                                    </p>
                                </div>
                                <div class="tab-pane" id="profile1" role="tabpanel">
                                    <p class="mb-0">
                                    <form class="custom-validation" action="" onsubmit="handleSubmit(this)"
                                        method="POST" name="player" enctype="application/x-www-form-urlencoded">
                                        <div class="mb-3">
                                            <label class="form-label">Name</label>
                                            <input type="text" name="firstName"
                                                value="<%=row.firstName?row.firstName:'' %>" class="form-control"
                                                required placeholder="name" />
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Email</label>
                                            <input type="email" name="email" value="<%=row.email?row.email:'' %>"
                                                class="form-control" required parsley-type="email"
                                                placeholder="Enter a valid e-mail" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Date Of Birth</label>

                                            <input class="form-control" name="dob" type="date"
                                                value="<%=row.dob?row.dob:'' %>" id="example-date-input" required
                                                placeholder="date of birth">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Country</label>
                                            <input type="text" name="country" value="<%=row.country?row.country:'' %>"
                                                class="form-control" required placeholder="Country" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Pan Card</label>
                                            <input type="text" name="panNumber"
                                                value="<%=row.panNumber?row.panNumber:'' %>" class="form-control"
                                                required placeholder="Enter Pan Number" />

                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Adhar Card</label>
                                            <input type="text" name="aadharNumber"
                                                value="<%=row.aadharNumber?row.aadharNumber:'' %>" class="form-control"
                                                required placeholder="Enter Adhar Number" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Gender</label>
                                            <div>
                                                <select class="form-select" name="gender" required>
                                                    <option value=""></option>
                                                    <option value="male" <%=row.gender==='male' ?'selected':'' %>
                                                        >male</option>
                                                    <option value="female" <%=row.gender==='female' ?'selected':'' %>
                                                        >female</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Kyc Status</label>
                                            <div class="col-md-10">
                                                <select class="form-select" name="kycStatus" required>
                                                    <option value="notverified" <%=row.kycStatus==='notverified'
                                                        ?'selected':'' %>>notverified</option>
                                                    <option value="verified" <%=row.kycStatus==='verified'
                                                        ?'selected':'' %>>verified</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div>
                                            <div>
                                                <button type="submit"
                                                    class="btn btn-primary waves-effect waves-light me-1">
                                                    Submit
                                                </button>
                                                <button type="reset" class="btn btn-secondary waves-effect">
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                    </p>
                                </div>
                                <div class="tab-pane" id="messages1" role="tabpanel">
                                    <p class="mb-0">
                                    <form class="custom-validation"
                                        action="<%=process.env.ADMIN_URL%>/admin/player/status/<%=row._id %>"
                                        onsubmit="handleSubmit(this)" method="POST" name="player"
                                        enctype="application/x-www-form-urlencoded">


                                        <div class="mb-3">
                                            <label class="form-label">Status</label>
                                            <div class="col-md-10">
                                                <select class="form-select" name="status" required>
                                                    <option value="inactive" <%=row.status==='inactive' ?'selected':''
                                                        %>>inactive</option>
                                                    <option value="active" <%=row.status==='active' ?'selected':'' %>
                                                        >active</option>
                                                    <option value="banned" <%=row.status==='banned' ?'selected':'' %>
                                                        >banned</option>
                                                    <option value="deleted" <%=row.status==='deleted' ?'selected':'' %>
                                                        >deleted</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div>
                                            <div>
                                                <button type="submit"
                                                    class="btn btn-primary waves-effect waves-light me-1">
                                                    Change Status
                                                </button>

                                            </div>
                                        </div>
                                    </form>
                                    </p>
                                </div>
                                <div class="tab-pane" id="settings1" role="tabpanel">
                                    <p class="mb-0">
                                    <form class="custom-validation"
                                        action="<%=process.env.ADMIN_URL%>/admin/wallet/player/<%=row._id %>"
                                        onsubmit="handleSubmit(this)" method="POST" name="player"
                                        enctype="application/x-www-form-urlencoded">


                                        <div class="mb-3">
                                            <label class="form-label">Amount</label>
                                            <input type="text" name="amount" value="" class="form-control" required
                                                placeholder="Amount Add" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Note</label>
                                            <textarea name="note" value="" class="form-control" required
                                                placeholder="Note ..."></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">TransactionType</label>
                                            <div class="col-md-10">
                                                <select class="form-select" name="transactionType" required>
                                                    <option value="credit" <%=row.status==='credit' ?'selected':'' %>
                                                        >credit</option>
                                                    <option value="debit" <%=row.status==='debit' ?'selected':'' %>
                                                        >debit</option>

                                                </select>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">For</label>
                                            <div class="col-md-10">
                                                <select class="form-select" name="logType" required>
                                                    <option value="bonus" <%=row.status==='bonus' ?'selected':'' %>
                                                        >bonus</option>
                                                    <option value="deposit" <%=row.status==='deposit' ?'selected':'' %>
                                                        >deposit</option>
                                                    <option value="won" <%=row.status==='won' ?'selected':'' %>
                                                        >winning</option>

                                                </select>
                                            </div>
                                        </div>

                                        <div>
                                            <div>
                                                <button type="submit"
                                                    class="btn btn-primary waves-effect waves-light me-1">
                                                    Submit
                                                </button>

                                            </div>
                                        </div>
                                    </form>
                                    </p>
                                </div>
                            </div>


                        </div>
                    </div>
                </div> <!-- end col -->


            </div> <!-- end row -->

            <%- contentFor('FooterJs') %>

                <!-- parsleyjs -->
                <script src="/public/assets/libs/parsleyjs/parsley.min.js"></script>

                <script src="/public/assets/js/pages/form-validation.init.js"></script>
                <!-- Sweet Alerts js -->
                <script src="/public/assets/libs/sweetalert2/sweetalert2.min.js"></script>
