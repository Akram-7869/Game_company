                <%- contentFor('BottomJs') %>
                    <script>



                        function delRec(id) {
                            let r = confirm('Want to delet?');

                            if (r) {
                                handleDel(id);
                            }


                        }


                        function handleDel(id) {
                            return $.ajax({
                                type: 'DELETE',
                                url: '<%=process.env.ADMIN_URL%>/admin/playerdelold/' + id,
                                success: (results) => {
                                    alert('Record Delete');
                                    location.reload();
                                },
                                error: (err) => {
                                    alert('Error While Deleting');
                                }
                            });
                        }


                        var i = 1;
                        $('#list').DataTable({

                            "processing": true,
                            "serverSide": true,

                            "language": {
                                "search": "Player:",
                                searchPlaceholder: "Player Id / phone"
                            },
                            initComplete: function () {
                                var input = $('.dataTables_filter input').unbind(),
                                    self = this.api(),
                                    $searchButton = $('<button>')
                                        .text('search')
                                        .click(function () {
                                            //self.column(1).search('ccccccccccccccc');
                                            self.search(input.val()).draw();
                                        }),
                                    $clearButton = $('<button>')
                                        .text('clear')
                                        .click(function () {
                                            input.val('');
                                            $searchButton.click();
                                        })
                                $('.dataTables_filter').append($searchButton, $clearButton);
                            },
                            "ajax": {
                                url: '<%=process.env.ADMIN_URL%>/admin/playerold/data', type: "post",
                                data: function (d) {

                                    d['s_date'] = $('#s_date').val();
                                    d['e_date'] = $('#e_date').val();
                                    // d['id'] =status-filter;
                                    d['status'] = $('#status-filter').val();
                                    d[$('#id-field').val()] = $('#id-value').val();
                                    return d;
                                }
                            },
                            "columns": [
                                { data: null, "render": function (data, type, full, meta) { return '<input name="pids[]" value="' + full._id + '" type="checkbox">'; } },

                                { data: 'firstName', "defaultContent": "" },
                                { data: 'email', "defaultContent": "" },
                                // { data: 'phone', "defaultContent": "" },
                                {
                                    data: 'createdAt', render: function (data) {
                                        return moment(data).format('DD-MM-YYYY');
                                    }
                                },

                                { data: 'winings' },
                                { data: 'deposit' },
                                { data: 'bonus' },
                                { data: 'status' },

                                {
                                    data: null, "render": function (data, type, full, meta) {
                                        return '<a class="px-3 text-danger" onclick="delRec(\''
                                            + full._id + '\')"><i class="uil uil-trash-alt font-size-18"></i></a> ';
                                    }
                                },
                            ]
                        });
                    </script>