                <%- contentFor('BottomJs') %>
                    <script>
                        function add(nid) {
                            // Swal.fire({
                            //     title: '',
                            //     html: 'Please wait...',
                            //     allowEscapeKey: false,
                            //     allowOutsideClick: false,
                            //     didOpen: () => {
                            //         Swal.showLoading()
                            //     }
                            // });
                            Swal.fire({
                                title: "Are you sure?",
                                text: "Notifcation will be sent to all user",
                                icon: "warning",
                                buttons: true,
                                dangerMode: true,
                            })
                                .then((willDelete) => {
                                    if (willDelete) {
                                        Swal.showLoading();
                                        $.ajax({
                                            type: 'get',
                                            url: '<%=process.env.ADMIN_URL%>/admin/notification/all/' + nid,
                                            success: (results) => {
                                                location.reload();
                                            },
                                            error: (err) => {
                                                alert('Error While sending');
                                            }
                                        });
                                    } else {
                                        swal("Your imaginary file is safe!");
                                    }
                                });
                        }
                        function delRec(id) {
                            let r = confirm('Want to delete?');

                            if (r) {
                                handleDel(id);
                            }


                        }


                        function handleDel(id) {
                            return $.ajax({
                                type: 'DELETE',
                                url: '<%=process.env.ADMIN_URL%>/admin/notification/' + id,
                                success: (results) => {
                                    alert('Record Delete');
                                    location.reload();
                                },
                                error: (err) => {
                                    alert('Error While Deleting');
                                }
                            });

                        }
                        function view(id) {
                            alert(id);
                        }
                        var i = 0;
                        $('#listsetting').DataTable({

                            "processing": true,
                            "serverSide": true,
                            "ajax": {
                                url: "<%=process.env.ADMIN_URL%>/admin/notification/data", type: "post"
                            },
                            "columns": [
                                { data: null, "render": function (data, type, full, meta) { return i = i + 1; } },
                                { data: 'sendTo', "defaultContent": "" },
                                { data: 'status', "defaultContent": "" },
                                { data: 'title', "defaultContent": "" },

                                // {
                                //     data: null,
                                //     "render": function (data, type, JsonResultRow, meta) {

                                //         let imgUrl = "<%= apiFile%>" + JsonResultRow.imageId
                                //         return '<img width="50" src="' + imgUrl + '">';
                                //     }
                                // },

                                {
                                    data: null, "render": function (data, type, full, meta) {
                                        let action = '<a class="px-2 text-primary" href="<%=process.env.ADMIN_URL%>/admin/notification/'
                                            + full._id + '"><i class="uil uil-pen font-size-18"></i></a><a href="javascript:void(0);" class="px-2 text-danger" onclick="delRec(\''
                                            + full._id + '\')"><i class="uil uil-trash-alt font-size-18"></i></a>';

                                        if (full.sendTo == 'player') {
                                            action +=
                                                '<a class="px-2 text-success" href="<%=process.env.ADMIN_URL%>/admin/notification/player/'
                                                + full._id + '"><i class="uil uil-user-plus font-size-18"></i></a>';
                                        } else {
                                            action +=
                                                '<a class="px-2 text-primary" href="javascript:void(0);" class="px-2 text-danger" onclick="add(\''
                                                + full._id + '\')"><i class="uil uil-users-alt font-size-18"></i></a>';
                                        }
                                        return action;


                                    }
                                },
                            ]
                        });
                    </script>