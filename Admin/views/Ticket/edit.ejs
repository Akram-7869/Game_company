                                                    <div class="conversation-list">
                                                        <div class="ctext-wrap">
                                                            <div class="ctext-wrap-content">
                                                                <h5 class="font-size-14 conversation-name"><a href="#"
                                                                        class="text-dark">
                                                                        <%=item.from%>
                                                                    </a> <span
                                                                        class="d-inline-block font-size-12 text-muted ms-2">
                                                                        <%=item.dated%>
                                                                    </span></h5>
                                                                <p class="mb-0">
                                                                    <%=item.reply%>
                                                                </p>
                                                            </div>

                                                        </div>
                                                    </div>

                                                </li>

                                                <%}%>


