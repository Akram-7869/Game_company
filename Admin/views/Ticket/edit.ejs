                                    <p class="form-control">
                                        <%=row.subject%>
                                    </p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <p class="form-control">
                                        <%=row.description%>
                                    </p>
                                </div>
                                <%=apiUrl%>
                                    <img width=100 src="<%=baseUrl +'/assets/'+row.ticketImage%>">

                                    <div class="chat-conversation p-3">
                                        <ul class="list-unstyled mb-0" data-simplebar style="max-height: 455px;">

                                            <% for (let item of row.history){ %>
