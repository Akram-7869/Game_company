                    <script>
                        function delRec(id) {
                            let r = confirm('Want to delete?');

                            if (id) {
                                handleDel(id);
                            }
                        }


                        function handleDel(id) {
                            return $.ajax({
                                type: 'DELETE',
                                url: '<%=process.env.ADMIN_URL%>/admin/payment/' + id,
                                success: (results) => {
                                    alert('Record Delete');
                                    location.reload();
                                },
                                error: (err) => {
                                    alert('Error While Deleting');
                                }
                            });

                        }
                        function view(id) {
                            alert(id);
                        }
                        var i = 1;
                        $('#listsetting').DataTable({
